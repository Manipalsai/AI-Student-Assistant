{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/Frontend/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/$1",
      "check": true
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/index.html"
    }
  ]
}